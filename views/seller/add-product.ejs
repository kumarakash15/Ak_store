<% layout("/layout/seller_dashboard_layout") %>

<div class="container mt-3">
  <div class="card shadow p-4 rounded-4">
    <h3 class="mb-4 text-center">➕ Add New Product</h3>

    <form action="/seller/add-product" method="POST">
      <div class="mb-3">
        <label class="form-label">Product Image URL</label>
        <input type="text" name="image" class="form-control" required>
      </div>

      <div class="mb-3">
        <label class="form-label">Company Name</label>
        <input type="text" name="company" class="form-control" required>
      </div>

      <div class="mb-3">
        <label class="form-label">Item Name</label>
        <input type="text" name="item_name" class="form-control" required>
      </div>

      <div class="row">
        <div class="col-md-6 mb-3">
          <label class="form-label">Original Price</label>
          <input type="number" name="original_price" class="form-control" required>
        </div>

        <div class="col-md-6 mb-3">
          <label class="form-label">Current Price</label>
          <input type="number" name="current_price" class="form-control" required>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6 mb-3">
          <label class="form-label">Discount (%)</label>
          <input type="number" name="discount_percentage" class="form-control" value="0">
        </div>

        <div class="col-md-6 mb-3">
          <label class="form-label">Return Period (days)</label>
          <input type="number" name="return_period" class="form-control" value="0">
        </div>
      </div>

      <button class="btn btn-primary w-100">✅ Add Product</button>
    </form>
  </div>
</div>
<% layout("/layout/seller_dashboard_layout") %>

<h1 class="mb-2 text-center text-md-start">
  Welcome, <%= session.sellerId %>
</h1>

<p class="dashboard-intro text-center text-md-start mb-4">
  Manage your store, add products, and track orders here.
</p>

<div class="dashboard-cards d-flex flex-column flex-md-row gap-3 justify-content-center justify-content-md-start">

  <a href="/seller/add-product"
     class="dashboard-card d-flex flex-column align-items-center justify-content-center text-center p-3 flex-fill">
    <i class="fa-solid fa-plus fa-2x mb-2"></i>
    <span>Add Product</span>
  </a>

  <a href="/seller/products"
     class="dashboard-card d-flex flex-column align-items-center justify-content-center text-center p-3 flex-fill">
    <i class="fa-solid fa-boxes-stacked fa-2x mb-2"></i>
    <span>See All Products</span>
  </a>

  <a href="/seller/orders"
     class="dashboard-card d-flex flex-column align-items-center justify-content-center text-center p-3 flex-fill">
    <i class="fa-solid fa-clipboard-list fa-2x mb-2"></i>
    <span>Order History</span>
  </a>

</div>
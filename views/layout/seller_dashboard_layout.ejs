<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>AKSTORE Seller Panel</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/seller.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>

<body>

    <%- include("../includes/admin_navbar.ejs") %>

    <div class="container-fluid seller-dashboard-wrapper">
        <div class="row flex-nowrap">

            <!-- ðŸ”¹ Sidebar -->
            <aside class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-light dashboard-sidebar collapse d-md-block" id="sidebarMenu">
                <div class="sidebar-header text-center py-3">
                    <h2>AKSTORE</h2>
                    <span>Seller Panel</span>
                </div>

                <ul class="sidebar-menu nav flex-column">
                    <li class="nav-item"><a class="nav-link" href="/seller/dashboard">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" href="/seller/add-product">Add Product</a></li>
                    <li class="nav-item"><a class="nav-link" href="/seller/products">All Products</a></li>
                    <li class="nav-item"><a class="nav-link" href="/seller/orders">Orders History</a></li>
                </ul>
            </aside>

            <!-- ðŸ”¹ RIGHT SIDE CONTENT -->
            <main class="col py-3 dashboard-main">
                <%- body %>
            </main>
        </div>
    </div>

    <%- include("../includes/footer.ejs") %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Optional: Toggle sidebar on small screens
        document.addEventListener('DOMContentLoaded', function () {
            const sidebar = document.getElementById('sidebarMenu');
            const toggler = document.querySelector('.navbar-toggler');
            if (toggler) {
                toggler.addEventListener('click', function () {
                    sidebar.classList.toggle('show');
                });
            }
        });
    </script>

</body>

</html>
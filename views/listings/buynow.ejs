<% layout("/layout/bollerplate") %>

    <body class="bg-light">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-7">
                    <div class="card p-3 shadow-sm">
                        <div class="row">
                            <div class="col-md-5">
                                <img src="<%= product.image %>" class="img-fluid rounded">
                            </div>
                            <div class="col-md-7">
                                <h4>
                                    <%= product.company %>
                                </h4>
                                <h5 class="text-muted">
                                    <%= product.item_name %>
                                </h5>
                                <h3 class="mt-3">
                                    ₹<span id="unitPrice">
                                        <%= product.current_price %>
                                    </span>
                                    <span class="text-muted fs-6"><del>₹<%= product.original_price %></del></span>
                                    <span class="text-success fw-bold">(<%= product.discount_percentage %>% OFF)</span>
                                </h3>
                                <div class="d-flex align-items-center mt-3">
                                    <button class="btn btn-outline-dark btn-sm mx-2" id="decrease">−</button>
                                    <span class="fw-bold fs-5" id="qtyDisplay">1</span>
                                    <button class="btn btn-outline-dark btn-sm mx-2" id="increase">+</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="card shadow-sm p-3">
                        <h5 class="mb-3">PRICE DETAILS</h5>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Price (<span id="qtyText">1</span> item)</span>
                            <span>₹<span id="priceCalc">
                                    <%= product.current_price %>
                                </span></span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Delivery Charges</span>
                            <span class="text-success fw-bold">FREE</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between fw-bold fs-5">
                            <span>Total Amount</span>
                            <span>₹<span id="totalPrice">
                                    <%= product.current_price %>
                                </span></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card shadow-sm mt-4 p-3">
            <h5 class="mb-3">DELIVERY DETAILS</h5>
            <form id="buyNowForm" action="/buynow/<%= product._id %>" method="POST">
                <input type="hidden" name="quantity" id="formQuantity" value="1">
                <div class="row">
                    <!-- NAME -->
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Full Name</label>
                        <input type="text" name="name" class="form-control" placeholder="Enter your full name" required>
                    </div>
                    <!-- MOBILE -->
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Mobile Number</label>
                        <input type="tel" name="mobile" class="form-control" placeholder="10-digit mobile number"
                            required maxlength="10">
                    </div>
                </div>
                <!-- STATE AND CITY -->
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">State</label>
                        <input type="text" name="state" class="form-control" placeholder="Enter state" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">City / District</label>
                        <input type="text" name="city" class="form-control" placeholder="Enter city" required>
                    </div>
                </div>
                <div class="row">
                    <!-- PINCODE -->
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Pincode</label>
                        <input type="text" name="pincode" class="form-control" placeholder="Enter pincode" required
                            maxlength="6">
                    </div>
                    <!-- LOCALITY -->
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Locality / Area</label>
                        <input type="text" name="locality" class="form-control" placeholder="Road name, Area, Colony"
                            required>
                    </div>
                </div>
                <div class="row">
                    <!-- HOUSE NO -->
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">House No / Building / Street</label>
                        <input type="text" name="house" class="form-control"
                            placeholder="Flat no, House no, Street name" required>
                    </div>

                    <!-- LANDMARK (optional) -->
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Landmark (Optional)</label>
                        <input type="text" name="landmark" class="form-control" placeholder="Nearby landmark">
                    </div>
                </div>
            </form>
        </div>


        <!-- BOTTOM FIXED BAR -->
        <div class="fixed-bottom bg-white shadow-lg p-3 text-end">
            <button form="buyNowForm" type="submit" class="btn btn-success px-5 py-2 fs-5">
                PLACE ORDER
            </button>
        </div>
    </body>
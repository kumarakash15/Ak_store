<% layout("/layout/bollerplate") %>

<body>
    <div id="carouselExampleInterval" class="carousel slide mt-3" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active" data-bs-interval="10000">
                <img src="/photo/banner1.jpg" class="d-block w-100 img-fluid" alt="image not found" style="height: 30rem;">
            </div>
            <div class="carousel-item" data-bs-interval="2000">
                <img src="/photo/banner2.jpg" class="d-block w-100 img-fluid" alt="image not found" style="height: 30rem;">
            </div>
            <div class="carousel-item">
                <img src="/photo/banner3.jpg" class="d-block w-100 img-fluid" alt="image not found" style="height: 30rem;">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval"
            data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval"
            data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <div class="container mt-3">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">
            <% for(let product of allproduct){ %>
                <div class="col">
                    <div class="card h-100">

                        <!-- Make only image clickable -->
                        <a href="/product/<%= product._id %>">
                            <img src="<%= product.image %>" class="card-img-top img-fluid" alt="image not available" style="height: 20rem;">
                        </a>

                        <div class="card-body">
                            <p class="card-text">
                                <b><%= product.company %></b> <br>
                                <%= product.item_name %> <br>
                                <span style="font-weight: bold; color:#ff3f6c;">₹<%= product.current_price %></span>
                                <span style="text-decoration: line-through; color:gray;">₹<%= product.original_price %></span>
                                <span style="color:green;">(<%= product.discount_percentage %>% OFF)</span>
                            </p>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
</body>
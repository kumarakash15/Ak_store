<% layout("/layout/bollerplate") %>
<div class="myntra-orders">
    <aside class="orders-sidebar">
        <h3>Account</h3>
        <ul>
            <li class="active">Orders</li>
            <li>Wishlist</li>
            <li>Gift Cards</li>
            <li>Contact Us</li>
        </ul>
    </aside>
    <section class="orders-content">
        <h2>My Orders</h2>
        <% if (orders.length === 0) { %>
            <p class="empty">You have not placed any orders yet.</p>
        <% } %>
        <% orders.forEach(order => { %>
            <div class="order-box">

                <div class="order-top">
                    <div>
                        <p class="order-id">Order ID: <%= order._id %></p>
                        <p class="order-date"><%= order.orderDate.toDateString() %></p>
                    </div>
                    <span class="status <%= order.status.toLowerCase() %>">
                        <%= order.status %>
                    </span>
                </div>
                <% order.items.forEach(item => { %>
                    <div class="order-item">
                        <img src="<%= item.productId.image %>" alt="product">
                        <div class="details">
                            <h4><%= item.productId.item_name %></h4>
                            <p class="company"><%= item.productId.company %></p>
                            <p>Qty: <%= item.quantity %></p>
                            <p class="price">₹<%= item.productId.current_price %></p>
                        </div>
                    </div>
                <% }) %>
                <div class="order-footer">
                    <span>
                        Total: ₹<%= order.items.reduce(
                            (sum, i) => sum + i.quantity * i.productId.current_price,
                            0
                        ) %>
                    </span>
                    <div class="actions">
                        <button class="btn-outline">View Details</button>
                        <button class="btn-primary">Track Order</button>
                    </div>
                </div>
            </div>
        <% }) %>
    </section>
</div>
<% layout("/layout/bollerplate") %>

<style>
    
</style>

<body class="p-4">

    <div class="product-container mt-4">
        <div class="row">

            <!-- LEFT PRODUCT IMAGE SCROLLABLE -->
            <div class="col-md-6 product-left">
                <img src="<%= product.image %>" alt="<%= product.item_name %>">
            </div>

            <!-- RIGHT PRODUCT DETAILS -->
            <div class="col-md-6 product-right">

                <!-- Company -->
                <h2 class="text-secondary mb-0"><%= product.company %></h2>

                <!-- Item Name -->
                <h3 class="fw-bold mt-1"><%= product.item_name %></h3>

                <!-- Rating -->
                <p class="mt-2 fs-5">
                    ‚≠ê <span class="fw-bold"><%= product.rating.stars %></span>
                    (<%= product.rating.count %> ratings)
                </p>

                <hr>

                <!-- Price Section -->
                <h2 class="fw-bold">
                    ‚Çπ<%= product.current_price %> 
                    <span class="text-muted fs-4">
                        <del>‚Çπ<%= product.original_price %></del>
                    </span>
                    <span class="text-success fs-5 fw-bold">
                        <%= product.discount_percentage %>% OFF
                    </span>
                </h2>

                <p class="text-secondary">(inclusive of all taxes)</p>

                <hr>

                <!-- Delivery -->
                <p class="fs-5"><b>Delivery by:</b> <%= product.delivery_date %></p>

                <!-- Return -->
                <p class="fs-5"><b>Return period:</b> <%= product.return_period %> days</p>

                <hr>

                <!-- Buttons -->
                <div class="d-flex gap-3 mt-4">
                    <button class="btn btn-danger px-4 py-3 fs-5">
                        Buy Now
                    </button>

                    <button class="btn btn-primary px-4 py-3 fs-5">
                        üõí Add to Cart
                    </button>
                </div>

            </div>
        </div>
    </div>

</body>

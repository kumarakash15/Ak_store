<%layout("/layout/bollerplate")%>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-3">
                <h3>Listing Details</h3>
            </div>
            <div class="card col-6 offset-3 show-card">
                <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="<%= listing.image.filename %>">
                <div class="card-body">
                    <p class="card-text">
                        <b>
                            <%= listing.title %>
                        </b><br>
                        <b>About:</b><%= listing.description %><br>
                            <b>Price:</b>&#8377;<%= listing.price.toLocaleString("en-IN") %><br>
                                <b>Location</b><%= listing.location %><br>
                                    <b>Country:</b><%= listing.country %>
                    </p>
                </div>
            </div>
        </div>
        <div class="btns">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary col-1 offset-3">Edit</a><br><br>
            <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btn btn-dark del-btn offset-3">Delete</button>
            </form>
        </div>
    </body>
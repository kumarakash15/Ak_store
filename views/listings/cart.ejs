<% layout("/layout/bollerplate") %>

<body class="p-4">

    <h2 class="mb-4">My Shopping Bag (<%= cartItems.filter(item => item.productId).length %>)</h2>

    <div class="container">
        <div class="row">

            <!-- LEFT SIDE (Products) -->
            <div class="col-12 col-md-8 mb-4 mb-md-0">

                <% 
                // Filter out items with missing product references
                const validCartItems = cartItems.filter(item => item.productId);
                if(validCartItems.length === 0){ %>
                    <h3>Your cart is empty ðŸ˜”</h3>
                <% } %>

                <% 
                let totalMRP = 0, totalDiscount = 0, finalPrice = 0; 
                validCartItems.forEach(item => { 
                    totalMRP += item.productId.original_price * item.quantity;
                    finalPrice += item.productId.current_price * item.quantity;
                    totalDiscount += (item.productId.original_price - item.productId.current_price) * item.quantity;
                %>

                    <div class="card mb-3 p-3 shadow-sm d-flex flex-row align-items-center">
                        <a href="/product/<%= item.productId._id %>" class="me-3 d-block" style="width: 120px;">
                            <img src="<%= item.productId.image %>" class="img-fluid rounded" alt="product">
                        </a>

                        <div class="flex-grow-1">
                            <h5><%= item.productId.company %></h5>
                            <p><%= item.productId.item_name %></p>

                            <h4>
                                â‚¹<%= item.productId.current_price %>
                                <span class="text-muted fs-6"><del>â‚¹<%= item.productId.original_price %></del></span>
                                <span class="text-success fw-bold">(<%= item.productId.discount_percentage %>% OFF)</span>
                            </h4>

                            <!-- Quantity -->
                            <div class="d-flex align-items-center mt-2">
                                <button class="btn btn-outline-secondary btn-sm decrease me-2" data-id="<%= item._id %>">-</button>
                                <span class="fw-bold px-2"><%= item.quantity %></span>
                                <button class="btn btn-outline-secondary btn-sm increase ms-2" data-id="<%= item._id %>">+</button>
                            </div>
                        </div>
                    </div>

                <% }) %>

            </div>

            <!-- RIGHT SIDE (Price Summary) -->
            <div class="col-12 col-md-4">
                <div class="card shadow-sm p-3">
                    <h5 class="mb-3">Price Details</h5>

                    <div class="d-flex justify-content-between mb-2">
                        <span>Total MRP</span>
                        <span>â‚¹<%= totalMRP %></span>
                    </div>

                    <div class="d-flex justify-content-between mb-2">
                        <span>Discount</span>
                        <span class="text-success">- â‚¹<%= totalDiscount %></span>
                    </div>

                    <hr>

                    <div class="d-flex justify-content-between fw-bold fs-5 mb-3">
                        <span>Total Amount</span>
                        <span>â‚¹<%= finalPrice %></span>
                    </div>

                    <% if(validCartItems.length > 0){ %>
                        <a href="/cart/buynow" class="btn btn-success w-100 mb-2">PLACE ORDER</a>
                    <% } %>
                    <a href="/product" class="btn btn-outline-secondary w-100">Continue Shopping</a>
                </div>
            </div>

        </div>
    </div>

    <!-- AJAX Increase/Decrease -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script>
        $(".increase").click(function () {
            const id = $(this).data("id");
            $.post(`/cart/increase/${id}`, () => location.reload());
        });

        $(".decrease").click(function () {
            const id = $(this).data("id");
            $.post(`/cart/decrease/${id}`, () => location.reload());
        });
    </script>

</body>